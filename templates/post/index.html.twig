{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts</h1>
    <a href="{{ path('post_new') }}">Cr√©er un nouveau post</a>
    <ul>
        {% for post in posts %}
            <li>
                {{ post.content }} - {{ post.createdAt|date('Y-m-d H:i') }}
                <a href="{{ path('post_show', { id: post.id }) }}">Voir</a>
                <a href="{{ path('post_edit', { id: post.id }) }}">Modifier</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
