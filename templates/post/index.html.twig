{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100">
        <header class="bg-blue-600 text-white shadow">
            <div class="container mx-auto px-4 py-4 flex justify-between items-center">
                <div class="logo">
                    <h1 class="text-2xl font-bold">Mon Blog</h1>
                </div>
                <nav class="space-x-4">
                    <a href="{{ path('post_index') }}" class="nav-item text-lg hover:text-blue-300">Accueil</a>
                    <a href="{{ path('post_create') }}" class="nav-item text-lg hover:text-blue-300">Cr√©er un post</a>
                </nav>
            </div>
        </header>

        <main class="container mx-auto px-4 py-8">
            <h2 class="text-3xl font-semibold mb-6">Liste des Posts</h2>

            {% if posts is not empty %}
                <ul class="space-y-6">
                    {% for post in posts %}
                        <li class="bg-white shadow-md rounded-lg p-6">
                            <div class="post-header flex justify-between items-center mb-4">
                                <span class="text-gray-600 text-sm">Auteur: {{ post.user.name }}</span>
                                <span class="text-gray-500 text-sm">{{ post.createdAt|date('d/m/Y H:i') }}</span>
                            </div>
                            <p class="text-gray-800 mb-4">{{ post.content }}</p>
                            <div class="post-footer flex items-center justify-between">
                                <span class="text-gray-600 text-sm">{{ post.likes|length }} likes</span>
                                <button class="like-button bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">J'aime</button>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-500 text-center">Aucun post disponible.</p>
            {% endif %}
        </main>

        <footer class="bg-gray-800 text-white text-center py-4">
            <p>&copy; 2024 Mon Blog</p>
        </footer>
    </div>
{% endblock %}